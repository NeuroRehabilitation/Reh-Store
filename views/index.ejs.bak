<body>
    <%- include('partials/navbar') %>

        <style>
            header {
                padding: 156px 0 100px;
            }

            section {
                padding: 150px 0;
            }

            .bg-primary {
                background-color: #1abc9c !important;
            }

            #support_chat_button {
                position: fixed;
                bottom: 10px;
                right: 15px;
                /*height: 60%;
                width: 30%;*/
            }

            #support_chat {
                position: fixed;
                bottom: 5px;
                right: 15px;

                height: 70%;
                width: 30%;

                display: none;
            }

            #support_chat_close {
                cursor: pointer;
            }

            #support_chat_spinner {
                position: relative;
                top: 50%;
                left: 50%;
                color: white;
